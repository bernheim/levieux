---
pagination:
    data: wines
    size: 1
    alias: wine
permalink: "en/{{ wine.chateau | slug }}/{{ wine.id }}/"
layout: layouts/default.html
winepage: true
locale: en
---
<div class="padding">
  <h1 class="wine-header">{{wine.name}}</h1>
  <div class="wine-page flex">
    <div class="inline-block">
      <div class="wine-details"><div>{{wine.aop}}</div><div>{{wine.cepages}}</div></div>
      <div><p>{{wine.description.en}}</p></div>
      <div class="ecommerce-block">
        <span class="inline-block price">â‚¬{{wine.price}}</span>
        <button class="snipcart-add-item inline-block"
            data-item-id="{{wine.id}}"
            data-item-price="{{wine.price}}"
            data-item-url="{{wine.url}}"
            data-item-description="{{wine.description.en}}"
            data-item-image="{{wine.img}}"
            data-item-name="{{wine.name}}">
            Add to cart
          </button>
        </div>
      <div>
        <h2>Terroir</h2>
        <p>{{wine.terroir.en}}</p>
      </div>
      <div>
        <h2>Vinification</h2>
        <p>{{wine.vinification.en}}</p>
      </div>
        <a href="{{wine.fiche}}" download class="fiche_technique">Fiche technique</a>
    </div>

    <div class="">
        <img src="{{ wine.img }}" class="block padding">
    </div>
  </div>
</div>